<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_wish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/default_wallpaper">

    <include layout="@layout/item_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cvTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                app:cardCornerRadius="@dimen/card_view_corner_radius"
                android:id="@+id/cvWishListValueAddition">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/confirmation_image"
                        android:layout_height="@dimen/confirmation_image"
                        android:id="@+id/ivWishActivityValueAddition"
                        android:src="@mipmap/ic_conformation"
                        android:padding="@dimen/confirmation_image_margin"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Увеличение стоимости"
                            android:id="@+id/tWishActivityValueAddition" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Заказы с увеличенной стоимостью привлекательне для водителей, а значит автомобиль приедет быстрее"
                            android:id="@+id/tvWishActivityValueAdditionDescription"/>
                    </LinearLayout>
                    <Spinner
                        android:id="@+id/spWishActivityValueAddition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                app:cardCornerRadius="@dimen/card_view_corner_radius"
                android:id="@+id/cvWishListCheck">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivWishActivityCheck"
                        android:layout_width="@dimen/confirmation_image"
                        android:layout_height="@dimen/confirmation_image"
                        android:padding="@dimen/confirmation_image_margin"
                        android:src="@mipmap/ic_conformation" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tWishActivityCheck"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="БСО (чеки)"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <TextView
                            android:id="@+id/tvWishActivityCheckDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Мне неоходима квитанция по поездке" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/swWishListCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                app:cardCornerRadius="@dimen/card_view_corner_radius"
                android:id="@+id/cvWishListConditioner">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivWishActivityConditioner"
                        android:layout_width="@dimen/confirmation_image"
                        android:layout_height="@dimen/confirmation_image"
                        android:padding="@dimen/confirmation_image_margin"
                        android:src="@mipmap/ic_conformation" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tWishActivityConditioner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Кондиционер"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                    </LinearLayout>
                    <Switch
                        android:id="@+id/swWishListConditioner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                app:cardCornerRadius="@dimen/card_view_corner_radius"
                android:id="@+id/cvWishListSmoke">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivWishActivitySmoke"
                        android:layout_width="@dimen/confirmation_image"
                        android:layout_height="@dimen/confirmation_image"
                        android:padding="@dimen/confirmation_image_margin"
                        android:src="@mipmap/ic_conformation" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tWishActivitySmoke"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Курящий салон"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                    </LinearLayout>
                    <Switch
                        android:id="@+id/swWishListSmoke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                app:cardCornerRadius="@dimen/card_view_corner_radius"
                android:id="@+id/cvWishListNoSmoke">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivWishActivityNoSmoke"
                        android:layout_width="@dimen/confirmation_image"
                        android:layout_height="@dimen/confirmation_image"
                        android:padding="@dimen/confirmation_image_margin"
                        android:src="@mipmap/ic_conformation" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tWishActivityNoSmoke"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Не курящий салон"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                    </LinearLayout>
                    <Switch
                        android:id="@+id/swWishListNoSmoke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                app:cardCornerRadius="@dimen/card_view_corner_radius"
                android:id="@+id/cvWishListChildren">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivWishActivityChildren"
                        android:layout_width="@dimen/confirmation_image"
                        android:layout_height="@dimen/confirmation_image"
                        android:padding="@dimen/confirmation_image_margin"
                        android:src="@mipmap/ic_conformation" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tWishActivityChildren"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Буду с ребенком/детьми"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                    </LinearLayout>
                    <Switch
                        android:id="@+id/swWishListChildren"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>




    </ScrollView>




</RelativeLayout>
