<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_margin"
    app:cardCornerRadius="@dimen/card_view_corner_radius"
    android:id="@+id/cvOrderRoutePoint"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground">
        <ImageView
            android:layout_width="@dimen/confirmation_image"
            android:layout_height="@dimen/confirmation_image"
            android:id="@+id/ivRoutePointType"
            android:src="@mipmap/ic_conformation_pickup"
            android:padding="@dimen/confirmation_image_margin"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/tvRoutePointName" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvRoutePointDescription"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edRoutePointNote"
                android:hint="@string/edRoutePointNote"
                android:drawableRight="@drawable/ic_mode_edit_gray"
                android:maxLines="1"
                android:imeOptions="actionDone"/>
        </LinearLayout>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/cbRoutePoint"/>
    </LinearLayout>

</android.support.v7.widget.CardView>

